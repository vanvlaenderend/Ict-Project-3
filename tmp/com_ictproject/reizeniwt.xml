<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
 
        <name>reizeniwt</name>
        <!-- The following elements are optional and free of formatting constraints -->
        <creationDate>November 2013</creationDate>
        <author>Dennis Van Vlaenderen</author>
        <authorEmail>1137544@student.khlim.be</authorEmail>
        <authorUrl>http://www.khlim.be</authorUrl>
        <copyright>Copyright 2013</copyright>
        <license>License Open Source</license>
        <!--  The version string is recorded in the components table -->
        <version>0.0.1</version>
        <!-- The description is optional and defaults to the name -->
        <description>IctProject: ReizenIwt management tool for foreign trips of khlim iwt</description>
 
        <update> <!-- Runs on update; New in 2.5 -->
                <schemas>
                        <schemapath type="mysql">sql/updates/mysql</schemapath>
                </schemas>
        </update>
 
        <!-- Site Main File Copy Section -->
        <!-- Note the folder attribute: This attribute describes the folder
                to copy FROM in the package to install therefore files copied
                in this section are copied from /site/ in the package -->
        <files folder="site">
                <filename>index.html</filename>
                <filename>reizeniwt.php</filename>
                <filename>controller.php</filename>
                <folder>views</folder>
                <folder>models</folder>
        </files>
 
        <administration>
                <!-- Administration Menu Section -->
                <menu>Kamers!</menu>
                <!-- Administration Main File Copy Section -->
                <!-- Note the folder attribute: This attribute describes the folder
                        to copy FROM in the package to install therefore files copied
                        in this section are copied from /admin/ in the package -->
                <files folder="admin">
                        <!-- Admin Main File Copy Section -->
                        <filename>index.html</filename>
                        <filename>reizeniwt.php</filename>
                        <filename>controller.php</filename>
                        <folder>controllers</folder>
                        <folder>views</folder>
                        <folder>models</folder>
                        <folder>tables</folder>
                        <!-- SQL files section -->
                        <folder>sql</folder>
                </files>
        </administration>
 
</extension>